<!DOCTYPE html>
<html lang="en">
    <%- include('../partials/head.ejs') %>
    <body>
        <%- include('../partials/header.ejs') %>
        <main id="producto" class="flex">
            <article class="ancho-full centrado">
                <div class="ancho-quarter centrado">
                    <img src="/img/<%= producto.image %>" alt="Imagen de Producto">
                </div>
                <div class="ancho-half centrado">
                    <h1><%= producto.name %>
                        <% if (locals.user && locals.user.is_admin){ %>
                             | <a href="/productos/actualizar/<%= producto.id %>"><i class="fas fa-edit"></i></a>
                        <% } %>
                    </h1>
                    
                    <div class="ancho-full centrado"><%= producto.description %></div>
                    <div class="ancho-full centrado categoria">
                        <% for (ingrediente of producto.ingredients) {%>
                            <div class="tag"><%= ingrediente.name %></div>
                        <% } %>
                        
                    </div>
                    <div class="ancho-full centrado">$ <%= producto.price %></div>
                    <% if (locals.user){ %>
                        <div class="centrado">
                            <button id="agregar-producto" type="button" data-pid="<%= producto.id %>" onclick="agregarAlCarrito(this)">Agregar</button>
                        </div>
                    <% } %>
                </div>
            </article>
        </main>

        <%- include('../partials/footer.ejs') %>
        <script type="text/javascript" src="/js/cookies.js"></script>
        <script type="text/javascript" src="/js/carrito.js"></script>
    </body>
</html>
<!DOCTYPE html>
<html lang="en">
<%- include ('../partials/head.ejs') %>


<body>
    <%- include ('../partials/header.ejs') %>

    <main id="productos">
        <div class="ancho-full centrado">
            <h1>NUESTROS PRODUCTOS | <a href="/productos/crear"><i class="fas fa-plus"></i></a></h1>
        </div>
        <section class="flex">
            <% for(producto of productos){ %>
              <article class="ancho-half">
                <div class="ancho-full productos-imagen" style="background-image: url('/img/<%= producto.imagen %>');">
                </div>
                <div class="ancho-full">
                    <div class="ancho-full espaciado detalle"> 
                    <div class="nombre"><%= producto.nombre %></div>
                    <div class="precio">$<%= producto.precio %></div>
                    </div>
                    <div class="ancho-full espaciado" >
                        <button class="ancho-half" >Agregar<i class="fas fa-cart-plus"></i></button>
                        <a href="/productos/<%= producto.id %>">
                            <button class="ancho-half">Ver mas</button>
                        </a> 
                    </div>
            </div>
            </article>  
            <% } %>
        </section>
    </main>
    <%- include ('../partials/footer.ejs') %>
</body>
</html>
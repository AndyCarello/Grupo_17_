<header>
    <div id="barra-superior">
        <div id="buscador">
            <form action="/productos/buscar/" method="GET">
                <input type="text" name="busqueda" placeholder="Buscar...">
                <button type="submit"><i class="fas fa-search"></i></button>
            </form>
        </div>
        <div id="grupo-dcho">
            <div id="carrito">
                <a href="/carrito"><i class="fas fa-shopping-cart"></i>Carrito</a>
            </div>
            <div id="login-bar">
                <% if (!locals.sesionIniciada) { %>
                    <div>
                        <a href="/usuarios/registro">Creá tu cuenta</a>
                    </div>
                    <div>
                        <a href="/usuarios/ingreso">Ingresá</a>
                    </div>
                <% } else { %>
                    <div>
                        <a href="/usuarios/perfil">Perfil</a>
                    </div>
                    <div>
                        <a href="/usuarios/salir">Salir</a>
                    </div>
                <% } %>
                
            </div>

        </div>
    </div>
    <div id="contenedor-logo">
        <a href="/home"><img src="/img/sp_logo.png"></a>
    </div>
    <nav id="barra-navegacion">
        <ul>
            <li id="abrir-menu" class="invertido derecha solo-mobile" onclick="ocultarMenu()"><a href="#">Menu <span><i class="fas fa-bars"></i></span></a></li>
            <li class="ocultable siempre-desktop menu-oculto" id="menu-home"><a href="/home">Home</a></li>
            <li class="ocultable siempre-desktop menu-oculto" id="menu-productos"><a href="/productos">Productos</a></li>
            <li class="ocultable siempre-desktop menu-oculto" id="menu-quienes"><a href="/info">Quienes Somos</a></li>
            <li class="ocultable siempre-desktop menu-oculto" id="menu-contacto"><a href="/contacto">Contacto</a></li>
            <!-- <li><a href="/delivery">Delivery</a></li> -->
            <li class="ocultable menu-oculto" id="menu-preguntas"><a href="/preguntas-frecuentes">Preguntas Frecuentes</a></li>
            <% if (locals.user && locals.user.is_admin){ %>
                <li class="ocultable siempre-desktop menu-oculto" id="menu-admin"><a href="/admin"><i class="fas fa-cogs"></i> Administrar</a></li>
            <% } %>
            <li class="invertido solo-mobile ocultable menu-oculto" id="menu-carrito"><a href="/carrito"><i class="fas fa-shopping-cart"></i>Carrito</a></li>
            <% if (!locals.sesionIniciada) { %>
                <li class="invertido solo-mobile ocultable menu-oculto" id="menu-ingreso"><a href="/usuarios/ingreso"><i class="fas fa-user"></i>Ingresar</a></li>
                <li class="invertido solo-mobile ocultable menu-oculto" id="menu-registro"><a href="/usuarios/registro"><i class="fas fa-user-plus"></i>Registrarme</a></li>
            <% } else { %>
                <li class="invertido solo-mobile ocultable menu-oculto" id="menu-perfil"><a href="/usuarios/perfil">Perfil</a></li>
                <li class="invertido solo-mobile ocultable menu-oculto" id="menu-salir"><a href="/usuarios/salir">Salir</a></li>
            <% } %>
        </ul>
    </nav>
</header>